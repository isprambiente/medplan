= turbo_frame_tag "#{dom_id(user)}_#{dom_id(event)}", class: 'rows' do
  .columns.event.has-4-tablet.has-3-mobile{id: event.div, class: cycle('dark', 'light', name: 'meeting') }
    .column.is-2.tablet= l event.date_on
    .column.is-2.tablet= event.time(user)
    .column.has-text-right= event.categories(user)
